{
  "$schema": "http://json.schemastore.org/template",
  "author": "Mahmoud Sayed",
  "classifications": [ "Web", "API", "Clean Architecture" ],
  "identity": "Rootech.CleanArchitecture.Template",
  "name": "Clean Architecture Web API",
  "shortName": "cleanarch-api",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".git/",
        ".gitignore",
        ".gitattributes",
        ".vs/",
        "**/bin/",
        "**/obj/",
        "*.user",
        "*.suo",
        ".DS_Store"
      ]
    }
  ],
  "sourceName": "StartUp",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "description": "Target .NET 8.0"
        },
        {
          "choice": "net9.0",
          "description": "Target .NET 9.0"
        },
        {
          "choice": "net10.0",
          "description": "Target .NET 10.0"
        }
      ],
      "defaultValue": "net10.0"
    }
  }
}